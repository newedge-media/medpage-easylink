<?xml version="1.0"?>
<config>
    <modules>
        <Magik_Lambysettings>
            <version>0.1.3</version>
        </Magik_Lambysettings>
    </modules>
    <admin>
        <routers>
            <lambysettings>
                <use>admin</use>
                <args>
                    <module>Magik_Lambysettings</module>
                    <frontName>lambysettings</frontName>
                </args>
            </lambysettings>
        </routers>
    </admin>            
    <adminhtml>
        <layout>
            <updates>
                <lambysettings>
                    <file>lambysettings.xml</file>
                </lambysettings>
            </updates>
        </layout>
        
        <translate>
         <modules>
             <Magik>
                 <files>
                     <default>Magik_Lambysettings.csv</default>
                 </files>
             </Magik>
         </modules>
     </translate>
     <acl>
         <resources>
            <admin>
               <children>
                  <system>
                     <children>
                         <config>
                             <children>
                                 <lambysettings>
                                     <title>Lamby Theme Settings</title>
                                 </lambysettings>
                             </children>
                         </config>
                     </children>
                 </system>
                 <magik>
                     <children>
                        <lamby>
                            <title>Lamby</title>
                            <children>
                                <settings>
                                    <title>Theme Settings</title>
                                </settings> 
                                <restore>
                                    <title>Restore Defaults</title>
                                </restore>
                            </children>
                        </lamby>
                    </children>
                </magik>
            </children>
        </admin>
    </resources>
</acl>
</adminhtml>
<global>
    <blocks>
        <lambysettings>
            <class>Magik_Lambysettings_Block</class>
        </lambysettings>
    </blocks>
    <helpers>
        <lambysettings>
            <class>Magik_Lambysettings_Helper</class>
        </lambysettings>
    </helpers>
    <models>
        <lambysettings>
            <class>Magik_Lambysettings_Model</class>
        </lambysettings>
    </models>
    <resources>
        <lambysettings_setup>
            <setup>
                <module>Magik_Lambysettings</module>
                <class>Magik_Lambysettings_Model_Resource_Mysql4_Setup</class>
            </setup>
            <connection>
                <use>core_setup</use>
            </connection>
        </lambysettings_setup>
        <lambysettings_write>
            <connection>
              <use>core_write</use>
          </connection>
      </lambysettings_write>
      <lambysettings_read>
         <connection>
            <use>core_read</use>
        </connection>
    </lambysettings_read>
</resources>
</global>
<default>
  <lambysettings>
     <lambysettings_appearance>
        <footer>informative</footer>       			
        <font>Open Sans</font>								
        <color></color>
        <header_bg_color></header_bg_color>
        <header_fg_color></header_fg_color>
        <footer_bg_color></footer_bg_color>
        <footer_fg_color></footer_fg_color>
        <content_bg_color></content_bg_color>
    </lambysettings_appearance>
    <lambysettings_header>
        <navigation_home>0</navigation_home>                               
    </lambysettings_header>
    <lambysettings_menu>
        <navigation_menu_type>mega-menu</navigation_menu_type>                                
    </lambysettings_menu>
    <lambysettings_labels>
        <new_label>1</new_label>
        <new_label_text>New</new_label_text>
        <new_label_position>top-left</new_label_position>
        <sale_label>1</sale_label>
        <sale_label_text>Sale</sale_label_text>
        <sale_label_position>top-right</sale_label_position>
    </lambysettings_labels>
    <lambysettings_footer>
     <footer_google_analytics></footer_google_analytics>
     <footer_google_analytics_path></footer_google_analytics_path>                                
 </lambysettings_footer>
 <lambysettings_social>
     <social_link>1</social_link>
     <facebook_social_link>1</facebook_social_link>
     <facebook_social_link_path>#</facebook_social_link_path>
     <twitter_social_link>1</twitter_social_link>
     <twitter_social_link_path>#</twitter_social_link_path>
     <googleplus_social_link>1</googleplus_social_link>
     <googleplus_social_link_path>#</googleplus_social_link_path>
     <rss_social_link>1</rss_social_link>
     <rss_social_link_path>#</rss_social_link_path>     
     <pinterest_social_link>1</pinterest_social_link>
     <pinterest_social_link_path>#</pinterest_social_link_path>
     <linkedin_social_link>1</linkedin_social_link>
     <linkedin_social_link_path>#</linkedin_social_link_path>
     <youtube_social_link>1</youtube_social_link>
     <youtube_social_link_path>#</youtube_social_link_path>
 </lambysettings_social>
 <lambysettings_products>
    <upsell_product>1</upsell_product>
    <related_product>1</related_product>
    <nextprevious_product>1</nextprevious_product>
</lambysettings_products>                                              
<lambysettings_shoppingcart>
    <shoppingcart_top>1</shoppingcart_top>
</lambysettings_shoppingcart>
<lambysettings_newsletterpopup>
    <newsletterpopup_enable>1</newsletterpopup_enable>
</lambysettings_newsletterpopup>
<lambysettings_quickview>
    <enable>1</enable>
</lambysettings_quickview>
</lambysettings>
</default>
</config>